      cursor: pointer;
    }

    /* Responsives Layout */
    @media (max-width: 768px) {
      .card {
        width: calc(50% - 16px); /* 2 Karten pro Zeile auf kleineren Screens */
      }
    }
    @media (max-width: 480px) {
      .card {
        width: 100%; /* 1 Karte pro Zeile auf sehr kleinen Screens */
      }
    }
