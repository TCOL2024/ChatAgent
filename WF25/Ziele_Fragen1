  <button onclick="showResults()">Quiz auswerten</button>
  <div id="results"></div>
  <hr/>
  <h2>Zertifikat</h2>
  <label for="firstname">Vorname:</label>
  <input type="text" id="firstname" placeholder="Vorname" />
  <label for="lastname">Nachname:</label>
  <input type="text" id="lastname" placeholder="Nachname" />
  <button onclick="generateCertificate()">Zertifikat anzeigen</button>
  <div id="certificate"></div>
  <button onclick="printCertificate()">Zertifikat drucken</button>

  <script>
    function showResults() {
      var answers = {
        q1: 'A', q2: 'C', q3: 'A', q4: 'A', q5: 'B',
        q6: 'C', q7: 'B', q8: 'C', q9: 'B', q10: 'A'
      };
      var form = document.getElementById('quiz-form');
      var resultDiv = document.getElementById('results');
      resultDiv.innerHTML = '<h2>Auflösung</h2><ol>';
      for (var key in answers) {
        var num = key.substring(1);
        var selected = form.elements[key].value || '—';
        var correct = answers[key];
        resultDiv.innerHTML += '<li>Frage ' + num + ': Richtige Antwort: ' + correct +
          ' (Ihre Antwort: ' + selected + ')</li>';
      }
      resultDiv.innerHTML += '</ol>';
      window.scrollTo(0, document.body.scrollHeight);
    }

    function generateCertificate() {
      var firstname = document.getElementById('firstname').value.trim();
      var lastname = document.getElementById('lastname').value.trim();
      if (!firstname || !lastname) {
        alert('Bitte Vor- und Nachname eingeben.');
        return;
      }
      var today = new Date();
      var dd = String(today.getDate()).padStart(2, '0');
      var mm = String(today.getMonth() + 1).padStart(2, '0');
      var yyyy = today.getFullYear();
      var dateStr = dd + '.' + mm + '.' + yyyy;
      var cert = document.getElementById('certificate');
      cert.innerHTML = 
        '<h1>Zertifikat</h1>' +
        '<p>Hiermit wird bescheinigt, dass</p>' +
        '<h2>' + firstname + ' ' + lastname + '</h2>' +
        '<p>erfolgreich am Quiz zu Unternehmenszielen am ' + dateStr + ' teilgenommen hat.</p>';
      cert.style.display = 'block';
      window.scrollTo(0, document.body.scrollHeight);
    }

    function printCertificate() {
      window.print();
    }
  </script>
</body>
